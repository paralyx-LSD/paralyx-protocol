# Paralyx Bridge Ethereum Deployment Configuration
# Copy this file to .env and fill in your actual values

# ========================================
# ETHEREUM DEPLOYMENT
# ========================================

# Private key for deployment (without 0x prefix)
# Generate with: openssl rand -hex 32
PRIVATE_KEY=de408dc12652f3924ec62c25c8053ea80dfa0ec85a1acd37dcd2e7bff14bf1bb

# Sepolia testnet RPC URL (Alchemy)
# SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/your_api_key_here

# Alternative: Infura Sepolia RPC
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/f96264cf853c424ab5678e8301ca0462

# Etherscan API key for contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# ========================================
# DEPLOYMENT SETTINGS
# ========================================

# Gas price settings (in gwei)
GAS_PRICE=20

# Gas limit for deployment
GAS_LIMIT=5000000

# Number of confirmations to wait
CONFIRMATIONS=3

# ========================================
# NETWORK CONFIGURATION
# ========================================

# Sepolia Chain ID
CHAIN_ID=11155111

# Deployment network
NETWORK=sepolia

# ========================================
# BRIDGE CONFIGURATION
# ========================================

# Initial validator address (will be set as deployer by default)
INITIAL_VALIDATOR=

# Maximum lock amount (in wei)
MAX_LOCK_AMOUNT=1000000000000000000000

# Minimum lock amount (in wei)  
MIN_LOCK_AMOUNT=1000000000000000

# ========================================
# TOKEN ADDRESSES (SEPOLIA TESTNET)
# ========================================

# Lido stETH on Sepolia
STETH_ADDRESS=0x3e3FE7dBc6B4C189E7128855dD526361c49b40Af

# Lido wstETH on Sepolia
WSTETH_ADDRESS=0xB82381A3fBD3FaFA77B3a7bE693342618240067b

# WETH on Sepolia
WETH_ADDRESS=0xfFf9976782d46CC05630D1f6eBAb18b2324d6B14

# ========================================
# DEVELOPMENT SETTINGS
# ========================================

# Enable gas reporting
REPORT_GAS=true

# Enable optimizer
OPTIMIZER_ENABLED=true

# Optimizer runs
OPTIMIZER_RUNS=200
